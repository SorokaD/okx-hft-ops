# ============================================
# OKX HFT Ops - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================

# ==================== Grafana ====================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_password

# ==================== Prometheus ====================
# Generate with: htpasswd -nbB admin YOUR_PASSWORD | sed 's/\$/\$\$/g'
PROMETHEUS_BASIC_AUTH=admin:$$2y$$05$$CHANGE_ME_HASH

# ==================== MinIO (S3-compatible storage) ====================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password

# ==================== MLflow ====================
MLFLOW_DB_USER=mlflow
MLFLOW_DB_PASSWORD=CHANGE_ME_mlflow_db_password
MLFLOW_DB_NAME=mlflow

# ==================== Superset ====================
# Generate with: openssl rand -hex 32
SUPERSET_SECRET_KEY=CHANGE_ME_superset_secret_key
SUPERSET_DB_USER=superset
SUPERSET_DB_PASSWORD=CHANGE_ME_superset_db_password
SUPERSET_DB_NAME=superset
# Superset web admin (used during init)
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_PASSWORD=CHANGE_ME_superset_admin_password

# ==================== Airflow ====================
# Generate Fernet key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=CHANGE_ME_fernet_key
AIRFLOW__WEBSERVER__SECRET_KEY=CHANGE_ME_webserver_secret

AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=CHANGE_ME_airflow_db_password
AIRFLOW_DB_NAME=airflow

# Airflow web admin (created during init)
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=CHANGE_ME_airflow_admin_password
AIRFLOW_ADMIN_EMAIL=admin@example.com
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User
